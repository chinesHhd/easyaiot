<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.basiclab.iot.stream.mapper.RoleMapper">

    <!-- 添加角色 -->
    <insert id="add" parameterType="com.basiclab.iot.stream.storager.dto.Role">
        INSERT INTO wvp_user_role (
            name,
            authority,
            create_time,
            update_time
        ) VALUES (
                     #{name},
                     #{authority},
                     #{createTime},
                     #{updateTime}
                 )
    </insert>

    <!-- 更新角色信息 -->
    <update id="update" parameterType="com.basiclab.iot.stream.storager.dto.Role">
        UPDATE wvp_user_role
        <set>
            update_time = #{updateTime},
            <if test="name != null">name = #{name},</if>
            <if test="authority != null">authority = #{authority},</if>
        </set>
        WHERE id != 1 AND id = #{id}
    </update>

    <!-- 删除角色 -->
    <delete id="delete">
        DELETE
        FROM wvp_user_role
        WHERE id != 1 AND id = #{id}
    </delete>

    <!-- 根据ID查询角色 -->
    <select id="selectById" resultType="com.basiclab.iot.stream.storager.dto.Role">
        SELECT *
        FROM wvp_user_role
        WHERE id = #{id}
    </select>

    <!-- 查询所有角色 -->
    <select id="selectAll" resultType="com.basiclab.iot.stream.storager.dto.Role">
        SELECT *
        FROM wvp_user_role
    </select>

</mapper>