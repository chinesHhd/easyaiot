<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.basiclab.iot.device.dal.taos.product.TdEngineMapper">

    <resultMap id="deviceDataMap" type="com.basiclab.iot.device.dal.dataobject.product.DeviceData">
        <result column="last_row(report_time)" property="lastUpdateTime" />
        <result column="last_row(function_type)" property="functionType" />
        <result column="last_row(identifier)" property="identifier" />
        <result column="last_row(data_type)" property="dataType" />
        <result column="last_row(data_value)" property="dataValue" />
    </resultMap>

    <select id="getLastRowsListByIdentifier" resultMap="deviceDataMap">
        <foreach collection="identifierList" item="item" index="index" separator="UNION ALL" close=";">
            select last_row(*) from ${tdDatabaseName}.${tdSuperTableName}_${deviceIdentification}
            WHERE function_type = #{functionType} and identifier = #{item}
        </foreach>
    </select>
</mapper>
